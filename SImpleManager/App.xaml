<Application x:Class="SimpleManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SimpleManager"
             StartupUri="/Views/OtherViews/AuthorizationView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\Fonts.xaml"/>
                <ResourceDictionary Source="Styles\Text.xaml"/>
                <ResourceDictionary Source="Styles\Icons.xaml"/>
                <ResourceDictionary Source="Styles\Buttons.xaml"/>
                <ResourceDictionary Source="Styles\Menu.xaml"/>
                <ResourceDictionary Source="Styles\DataGrid.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
